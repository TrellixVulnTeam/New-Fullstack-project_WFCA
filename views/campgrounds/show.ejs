<%- layout('layouts/boilerplate') %>
    <h1 class="text-center"> Details on Camp: <b>
            <%=item.title%>
        </b>
    </h1>

    <!-- New bootstrap card -->
    <!-- first column -->
    <div class="row">
        <div class="col-6">
            <div class="card" style="width: 30rem;">
                <img src="<%=item.image%>" class="card-img-top" alt="..." style="height : 300px">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=item.title%>
                    </h5>
                    <p class="card-text"><b>Description:</b>
                        <%=item.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Price:</b> This camp is priced at $<%=item.price%> a week</li>
                    <!-- <li class="list-group-item">Dapibus ac facilisis in</li>
            <li class="list-group-item">Vestibulum at eros</li> -->
                </ul>
                <div class="card-body">
                    <div class="mb-3">
                        <a class="card-link btn btn-success" href="/campground">Back to all campgrounds</a>

                        <a Class="card-link btn btn-success" href="/campground/<%=item._id%>/edit">Edit
                            campground</a>
                    </div>

                </div>
            </div>
            <div class="my-3">
                <form action="/campground/<%=item._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Campground</button>
                </form>

            </div>


        </div>
        <!-- second column -->
        <div class="col-6">
            <!-- bootstrap card  -->
            <!-- <div class="card">
            <div class="card-body">
              This is some text within a card body.
            </div>
          </div> -->
            <div style="width: 18rem;">
                <form action="/campground/<%=item._id%>/review" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <div>
                            <label class="form-label" for="text">Leave us your Comment</label>
                            <textarea class="form-control" name="review[text]" id="text" cols="30" rows="3"
                                required></textarea>
                            <div class="valid-feedback">
                                Awsome it's working!
                            </div>
                        </div>
                        <div>
                            <label for="rating">Rating</label>
                            <input type="number" min="1" max="5" value="1" id="rating" name="review[rating]">
                            <Button class="btn-success">Submit Review</Button>
                        </div>
                    </div>
                </form>
            </div>

            <h2>Check out our Reviews!!!</h2>
            <% for(let rev of item.review){%>

                <div class="card my-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <b>Rating:
                                <%=rev.rating%>
                            </b>
                        </h5>
                        <p class="card-text">
                            <%=rev.text%>
                        </p>
                        <form action="/campground/<%=item._id%>/review/<%=rev._id%>?_method=DELETE" method="POST">
                            <button class="btn-danger mb-3">Delete comment</button>
                        </form>
                    </div>
                </div>
                <%} %>
        </div>
    </div>
<%- layout('layouts/boilerplate') %>

    <div class="col-6 offset-3">
        <h1>Sign Up</h1>
        <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="email"><b>User email</b></label>
                <input type="email" class="form-control" id="email" name="email" placeholder="insert email" required>
                <div class="valid-feedback">
                    Awsome it's working!
                </div>
            </div>
            <div class="form-group my-3">
                <label for="username"><b>Username</b></label>
                <input type="text" class="form-control" id="username" name="username" placeholder="insert username"
                    required>
                <div class="valid-feedback">
                    Awsome it's working!
                </div>
            </div>
            <div class="form-group my-3">
                <label for="username"><b>Password</b></label>
                <input type="password" class="form-control" id="password" name="password" placeholder="insert password"
                    required>
                <div class="valid-feedback">
                    Awsome it's working!
                </div>

                <div class="form-group my-3">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                    <a href="/" class="btn btn-danger">Cancel</a>
                </div>


        </form>
        <div class="my-5">
            <a class="btn btn-primary" href="/login">Already have an account? Log in here</a>
        </div>